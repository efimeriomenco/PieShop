@model Pie
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.pieImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.piePrice.ToString("c")</h3>
            <h3>
                <a asp-controller="Pie"
                   asp-action="Details"
                   asp-route-id="@Model.pieId">@Model.pieName</a>
            </h3>
            <p>@Model.pieShortDesc</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" 
                   asp-controller="ShoppingCart" 
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.pieId">Add to cart</a>
            </p>
        </div>
    </div>
</div>